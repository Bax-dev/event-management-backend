# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=event_management
DB_USER=postgres
DB_PASSWORD=your_password_here

# Database Connection Pool Settings
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# SSL Configuration (set to 'true' for production with SSL)
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true

# Rate Limiting Configuration
# General rate limit (applied to all requests)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Strict rate limit (for sensitive operations)
RATE_LIMIT_STRICT_WINDOW_MS=60000
RATE_LIMIT_STRICT_MAX=10

# Authentication rate limit
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX=5

# Write operations rate limit (POST, PUT, DELETE)
RATE_LIMIT_WRITE_WINDOW_MS=60000
RATE_LIMIT_WRITE_MAX=20

# Read operations rate limit (GET)
RATE_LIMIT_READ_WINDOW_MS=60000
RATE_LIMIT_READ_MAX=100
